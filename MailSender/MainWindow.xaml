<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        xmlns:dd="clr-namespace:MailSender.lib.Data.DebugData;assembly=MailSender.lib"
        xmlns:linq2Sql="clr-namespace:MailSender.lib.Data.Linq2SQL;assembly=MailSender.lib"
        Title="Mail Sender" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"/>
                <MenuItem Header="Открыть..."/>
                <MenuItem Header="Сохранить"/>
                <MenuItem Header="Сохранить как..."/>
                <MenuItem Header="Закрыть"/>
                <Separator/>
                <MenuItem Header="Выход"/>
            </MenuItem>
            <MenuItem Header="Сервис" IsEnabled="False"></MenuItem>
            <MenuItem Header="Справка" IsEnabled="False">
                <MenuItem Header="О программе..." IsEnabled="False"/>
            </MenuItem>
            <ToolBar Band="1"
                     xmlns:c="clr-namespace:MailSender.Controls">
                <c:TabViewManager Width="200"
                                  Forward="OnForward"
                                  Backward="OnBackward"/>
            </ToolBar>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Готов"/>
        </StatusBar>
        <TabControl Name="MainTabControl">
            <TabItem Header="Списки">
                <DockPanel>
                    <ToolBarTray DockPanel.Dock="Top">
                        <ToolBarTray.Resources>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Height" Value="16"/>
                            </Style>
                        </ToolBarTray.Resources>
                        <ToolBar Band="0">
                            <TextBlock Text="Сервера:" Margin="25,0,0,0" VerticalAlignment="Center"/>
                            <ComboBox MinWidth="170" MaxWidth="200" SelectedItem="0"
                                ItemsSource="{x:Static dd:Servers.Items}"
                                DisplayMemberPath="Name">
                            </ComboBox>
                            <Button ToolTip="Добавить">
                                <Image Source="Src/add.png"></Image>
                            </Button>
                            <Button ToolTip="Редактирвоать">
                                <Image Source="Src/edit.png"></Image>
                            </Button>
                            <Button ToolTip="Удалить">
                                <Image Source="Src/remove.png"></Image>
                            </Button>
                        </ToolBar>
                        <ToolBar Band="1">
                            <TextBlock Text="Отправители:" VerticalAlignment="Center"/>
                            <ComboBox MinWidth="170" MaxWidth="200" SelectedItem="0"
                                      ItemsSource="{x:Static dd:Senders.Items}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type dd:Senders}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}"/>
                                            <TextBlock Text="{Binding Address}" Margin="5,0,0,0" Opacity="0.6"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button ToolTip="Добавить">
                                <Image Source="Src/add.png"></Image>
                            </Button>
                            <Button ToolTip="Редактирвоать">
                                <Image Source="Src/edit.png"></Image>
                            </Button>
                            <Button ToolTip="Удалить">
                                <Image Source="Src/remove.png"></Image>
                            </Button>
                        </ToolBar>
                        <ToolBar>
                            <TextBlock Text="Перейти в планировщик:" VerticalAlignment="Center"/>
                            <Button ToolTip="Планировщик">
                                <Image Source="Src/clock.png"></Image>
                            </Button>
                        </ToolBar>
                    </ToolBarTray>
                    <GroupBox Header="Список получателей писем">
                        <GroupBox.Resources>
                            <linq2Sql:MailDataBaseContext x:Key="MailData"/>
                        </GroupBox.Resources>
                        <DataGrid AutoGenerateColumns="False"
                                  HorizontalGridLinesBrush="{x:Null}"
                                  VerticalGridLinesBrush="DarkGray"
                                  AlternatingRowBackground="LightGray"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding Recipient, Source={StaticResource MailData}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" MinWidth="30" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Адрес" MinWidth="200" Binding="{Binding Address}"/>
                                <DataGridTextColumn Header="Имя" Width="*" Binding="{Binding Name}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </DockPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Планировщик"></TextBlock>
                        <Image Width="16" Source="Src/scheduler.png" Margin="5,0,0,0"></Image>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <Calendar></Calendar>
                        <TextBlock Text="Время"></TextBlock>
                        <TextBox></TextBox>
                        <Button>Запланировать</Button>
                        <Button>Отправить сейчас</Button>
                    </StackPanel>
                    <GroupBox Grid.Column="1" Header="Задачи планировщика">
                        <ListBox ItemsSource="{x:Static dd:SchedulerTasks.Items}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type dd:SchedulerTask}">
                                    <GroupBox>
                                        <GroupBox.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}"/>
                                                <TextBlock>:</TextBlock>
                                                <TextBlock Text="{Binding Time, StringFormat=D, ConverterCulture=ru-ru}"/>
                                                <TextBlock Text="{Binding Time, StringFormat=T, ConverterCulture=ru-ru}"/>
                                            </StackPanel>
                                        </GroupBox.Header>
                                        <TextBlock Text="{Binding Mail}"/>
                                    </GroupBox>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Редактор писем">
                <DockPanel>
                    <GroupBox Header="Письма">
                        <DockPanel MinWidth="150" MaxWidth="200">
                            <Button DockPanel.Dock="Bottom">Создать</Button>
                            <Button DockPanel.Dock="Bottom">Сохранить</Button>
                            <ListBox></ListBox>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox Header="Текс письма"></GroupBox>
                </DockPanel>
            </TabItem>
            <TabItem Header="Статистика" IsEnabled="False"></TabItem>
        </TabControl>
    </DockPanel>
</Window>
